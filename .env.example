# Agent Zero Gateway Environment Variables
# Copy this file to .env and fill in your values
#
# Usage: cp .env.example .env

# ========================================
# Gateway Configuration
# ========================================

# Gateway server port (default: 18900)
GATEWAY_PORT=18900

# Gateway authentication token (REQUIRED for remote access)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
GATEWAY_AUTH_TOKEN=your_secure_random_token_here

# ========================================
# Channel Tokens
# ========================================

# Telegram Bot Token
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=

# Discord Bot Token
# Get from Discord Developer Portal
DISCORD_BOT_TOKEN=

# ========================================
# LLM API Keys
# ========================================

OPENAI_API_KEY=sk-xxx
ANTHROPIC_API_KEY=sk-ant-xxx

# ========================================
# Optional: Alert Configuration
# ========================================

# Webhook for alerts (optional)
ALERT_WEBHOOK_TOKEN=

# ========================================
# Memory Enhancement (Optional)
# ========================================

# Enable enhanced memory system with hybrid search
# Options: false (default), true
MEMORY_ENHANCED_ENABLED=false

# Enable embedding cache (reduces API calls)
MEMORY_CACHE_ENABLED=true

# Embedding cache size (number of embeddings to cache)
MEMORY_CACHE_SIZE=1000

